<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutActivity"
    android:background="@color/Background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/aboutLayoutID">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/about"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txt_What"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:singleLine="true"
                android:text="@string/setting_what"
                android:textIsSelectable="false"
                android:autofillHints="" />

            <EditText
                android:id="@+id/txt_Why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/why_i_like_writing_code"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/txt_How"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/cpu_txt_about"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/txt_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/setting_lets_you_control_the_range_of_the_three_integrals_cpu_count_amp_to_stop_the_calculations_on_first_success"
                android:textIsSelectable="false" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>