<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jetcemetery.calculusPhoneNumber.activity.AboutActivity"
    android:background="@color/Background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/aboutLayoutID">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/about"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txt_What"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:singleLine="true"
                android:text="@string/about_what"
                android:textIsSelectable="false"
                android:autofillHints="" />

            <EditText
                android:id="@+id/txt_Why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/about_why"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/txt_How"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/about_how"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/txt_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:labelFor="@+id/aboutLayoutID"
                android:text="@string/setting_stopOnSuccess"
                android:textIsSelectable="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>